      <div class="col-6 border border-dark">
        <div class="row">
          <div class="col-8">
            <p>施設</p>
          </div>
          <div class="col-4">
            <p>
              <%= facility.reviews.average(:facility_score).to_f.round(1) %>点
            </p>
