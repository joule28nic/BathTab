<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>新規会員登録</h3>
    </div>
  </div>

  <div clas="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field row my-3">
          <label for="name" class="col-sm-4 col-form-label">ユーザー名</label>
          <%= f.text_field :name, autofocus: true, class: "col-sm-8", id: "name", placeholder: "温泉太郎" %>
        </div>

        <div class="field row mb-3">
          <label for="email" class="col-sm-4 col-form-label">メールアドレス</label>
          <%= f.email_field :email, class: "col-sm-8", id: "email", placeholder: "sample@example.com" , autocomplete: "email" %>
        </div>

        <div class="field row mb-3">
          <label for="gender" class="col-sm-4 col-form-label">性別</label>
          <%= f.select :gender, options_for_select(Customer.genders_i18n.invert), class: "col-sm-8", id: "gender" %>
        </div>

        <div class="field row mb-3">
          <label for="age" class="col-sm-4 col-form-label">年齢</label>
          <%= f.select :age, options_for_select(Customer.ages_i18n.invert), class: "col-sm-8", id: "age" %>
        </div>

        <div class="field row mb-3">
          <label for="password" class="col-sm-4 col-form-label">パスワード
          <% if @minimum_password_length %>
          <em class="col-form-label">(<%= @minimum_password_length %>文字以上)</em>
          <% end %></label>
          <%= f.password_field :password, class: "col-sm-8", id: "password", autocomplete: "new-password" %>
        </div>
        <div class="field row mb-4">
          <label for="password_confirmation" class="col-sm-4 col-form-label">パスワード(確認用)</label>
          <%= f.password_field :password_confirmation, class: "col-sm-8", id: "password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="row mb-2">
          <div class="col offset-8">
            <%= render "public/shared/links" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success col-3 offset-4 mb-3" %>
        </div>

      <% end %>
    </div>
  </div>

</div>
