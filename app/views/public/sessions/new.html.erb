<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>会員ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field row mb-3">
          <label for="email" class="col-sm-4 col-form-label">メールアドレス</label>
          <%= f.email_field :email, class: "col-sm-8", id: "email", placeholder: "sample@example.com" , autocomplete: "email" %>
        </div>

        <div class="field row mb-3">
          <label for="password" class="col-sm-4 col-form-label">パスワード</label>
          <%= f.password_field :password, class: "col-sm-8", id: "password", autocomplete: "current-password" %>
        </div>

        <div class="row mb-3">
          <div class="col offset-8">
            <%= render "public/shared/links" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-success col-3 offset-4 mb-3" %>
        </div>

      <% end %>
    </div>
  </div>

</div>
