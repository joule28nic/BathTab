<div class="container">
  <div class="row py-4">
    <div class="col-4 text-center">
      <h3>投稿内容を確認する</h3>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-10 offset-1 border border-dark py-3">

      <div class="row mb-1">
        <div class="col-8">
          <h4><%= @review.title %></h4>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col">
          <p><%= current_customer.name %> さん　性別：<%= current_customer.gender_i18n %>　年齢：<%= current_customer.age_i18n %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <h4>総合評価　<%= @review.total_score %>点</h4>
        </div>
        <div class="col-6">
          <div class="row">
            <div class="col-6">
              <p>施設　<%= @review.facility_score %>点</p>
            </div>
            <div class="col-6">
              <p>温泉　<%= @review.onsen_score %>点</p>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <p>サービス　<%= @review.service_score %>点</p>
            </div>
            <div class="col-6">
              <p>食事　<%= @review.meal_score %>点</p>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col m-3 border border-dark">
          <p><%= @review.comment %></p>
        </div>
      </div>

    </div>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @review, url: facility_reviews_path, method: :post do |f| %>
      <%= f.hidden_field :facility_id %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :total_score %>
      <%= f.hidden_field :facility_score %>
      <%= f.hidden_field :onsen_score %>
      <%= f.hidden_field :service_score %>
      <%= f.hidden_field :meal_score %>
      <%= f.hidden_field :comment %>
      <%= f.submit "この内容で投稿する", class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="row mb-5">
    <div class="col text-center">
      <%= link_to "編集する", new_facility_review_path %>
    </div>
  </div>

</div>