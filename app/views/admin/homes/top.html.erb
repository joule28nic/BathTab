<div class="container">
  <div class="row">
    <div class="col-8 offset-2">

      <div class="row border border-dark my-5">
        <div class="col">
          <div class="row">
            <h3>エリアから探す</h3>
          </div>
          <div class="row">
            <div class="col-10 offset-1">
              <% @regions.each do |region| %>
                <div class="row">
                  <div class="col-4">
                    <h5><%= region.name %></h5>
                  </div>
                  <div class="col-6 offset-1">
                    <%= form_with url: admin_facilities_path, method: :get, local: true do |f| %>
                      <%= f.collection_select(:prefecture_id, Prefecture.by_region(region.id), :id, :name) %>
                      <%= f.submit "検索" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="row border border-dark mb-5">
        <div class="col">
          <div class="row">
            <h3>施設名から探す</h3>
          </div>
          <div class="row">
            <div class="col">

            </div>
          </div>
        </div>
      </div>

      <div class="row border border-dark mb-5">
        <div class="col">
          <div class="row">
            <h3>設備から探す</h3>
          </div>
          <div class="row">
            <div class="col">

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>